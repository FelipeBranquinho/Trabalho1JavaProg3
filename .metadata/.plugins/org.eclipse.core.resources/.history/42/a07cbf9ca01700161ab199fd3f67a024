package jrf;
import java.util.*;

public class Exame {
	private String codigo;
	private String nome;
	private double peso;
	private String tipo;
	private Date data;
	
	public Exame(String codigo, String nome, double peso, String tipo, Date data){
		this.codigo = codigo;
		this.nome = nome;
		this.peso = peso;
		this.tipo = tipo;
		this.data = data;
	}
	
	@Override
	public String toString(){
		return codigo + ";" + nome + ";" + data;
	}
	
	public String getCodigoExame(){
		return codigo;
	}
	
	public double getPesoExame(){
		return peso;
	}
	
	public String getTipoExame(){
		return tipo;
	}
	
	public static Comparator<Aluno> comparaAlunoNome = new Comparator<Aluno>(){
		public int compare(Aluno a1, Aluno a2){
			String nomeAluno1 = a1.getAlunoNome().toUpperCase();
			String nomeAluno2 = a2.getAlunoNome().toUpperCase();
			return nomeAluno1.compareTo(nomeAluno2);
		}
	};
};